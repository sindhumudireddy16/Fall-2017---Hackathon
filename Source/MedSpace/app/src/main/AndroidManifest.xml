<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umkc.medspace">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".doctor.Doctor_Signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Patient_Signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.Appointments"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.Doctor_Hospital"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Patient_Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Find_Book"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Specialist"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Help_Support"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Specialist_Details"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Video_call"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Chat"
            android:screenOrientation="portrait" />
        <activity
            android:name=".doctor.Clients"
            android:screenOrientation="portrait" />
        <activity
            android:name=".patient.Reminder"
            android:screenOrientation="portrait" />
    </application>

</manifest>